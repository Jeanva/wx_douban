<template name="scroll-film-item">

    <navigator url="" redirect  class="for-film" style="display:inline-block;width:400rpx;padding-top:20rpx;">
        <image src="/image/audio_fill.png" style="width:60rpx;height:60rpx;display:inline-block; padding-left:20rpx;" />
        <view style="display:inline-block; font-size:24rpx;">
            <text style="display:block;font-size:32rpx;">找电影</text>
            <text style="color:#ccc">{{item.ctlg}}</text>
        </view>
        <view style="display:inline-block;position:relative; top:-14rpx; left:50rpx; height:60rpx; border-right:1rpx #f2f2f2 solid;">
            <image src="/image/arrow.png" style="width:32rpx;height:32rpx;" />
        </view>
    </navigator>

</template>


