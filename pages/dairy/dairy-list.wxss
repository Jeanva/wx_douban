  padding:20rpx 30rpx
}
.dairy_item{
  display: flex;
  flex-direction: row;
}
.dairy_pre{
  font-size:32rpx;
}
.dairy_des{
  color:#ccc;
  font-size:26rpx;
  margin:18rpx 10rpx 18rpx 0;
