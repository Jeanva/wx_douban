/* pages/group/group.wxss */
@import '../../template/title.wxss';
.Card{
    height:400rpx;
    width:670rpx;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 10rpx 4rpx rgb(230, 229, 229);
    background-color: #fff;
    margin:20rpx;
    display: flex;
    flex-direction: row; 
    font-size:32rpx;
    padding:20rpx;
}
.b_avatar image{
    border-radius:60rpx;
    width:120rpx;
    height:120rpx;
}
.cardCtn{
    padding:0rpx 20rpx 20rpx 20rpx;
    width:520rpx;
}
/* 描述 */
.des{
    font-size:30rpx;
    color:#333;
    height:190rpx;
    padding-top:10rpx;
    /* white-space:no-wrap; */
}
.des view{
  /* 如果要文字自动省略，容器不能设置高度 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:5;
}
.follower{
    font-size:24rpx; 
    color:#ccc;
}
.close-btn{
    /* background-color: #00B51D; */
    width:540rpx;
    height:32rpx;
    text-align:right;
    position: relative;
    top:0rpx;
    }
.close-btn image{
    width:32rpx;
    height:32rpx;
}
.author-follows{
    /* background-color: #999; */
    height:100rpx;
}
.follow,.followed{
    position:relative;
    top:-60rpx;
    left:330rpx;
    background-color:#00B51D;
    border-radius: 10rpx;
    color:#fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    width:180rpx;
    height:60rpx;
}
.followed{
  background-color:#ddd;
}
.like-msg{
    display: flex;
    flex-direction: row;
    padding-top:20rpx;
}
.like-msg image{
    width:32rpx;
    height:32rpx;
}
.like-msg view{
    font-size:20rpx;
    color:#999;
    line-height: 32rpx;
    width:100rpx;
}
.bottom{
    background-color: #fff;
    box-shadow: 1rpx 1rpx 10rpx 4rpx #ddd;
    font-size:28rpx; 
    padding-top:20rpx; 
    padding-left:30rpx; 
    height:60rpx; 
    position:fixed;
    display: flex;
    flex-direction: row;
    bottom:0rpx;
    width:100%;
}
.change-group{
  color:#1afa29;
  width:50%; 
} 
.change-group image{
    margin-right:20rpx;
    width:32rpx; 
    height:32rpx;
}
.choose-group{
  color:999;
  text-align: right;
  padding-right:60rpx;
  width:50%; 
}
.choose-group text{
  color:#fff;
  border-radius:12rpx;
  padding:6rpx 10rpx 6rpx 10rpx;
  background-color: #ccc;
  margin-right:30rpx;
}
.hide{
  display:none;
}