/* pages/group/group.wxss */

.Card{
    height:480rpx;
    width:670rpx;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 10rpx 4rpx rgb(230, 229, 229);
    background-color: #fff;
    margin:20rpx;
    display: flex;
    flex-direction: row;
    font-size:32rpx;
    padding:20rpx;
}
.Card image{
    border-radius:60rpx;
    width:120rpx;
    height:120rpx;
}
.cardCtn{
    padding:0rpx 20rpx 20rpx 20rpx;
    width:520rpx;
}
.des{
    font-size:30rpx;
    color:#333;
    padding-top:10rpx;
    white-space:no-wrap;
    overflow: hidden;
}
.close-btn{
    /* background-color: #00B51D; */
    width:540rpx;
    height:32rpx;
    text-align:right;
    position: relative;
    top:0rpx;
    }
.close-btn image{
    width:32rpx;
    height:32rpx;
}
.author-follows{
    /* background-color: #999; */
    height:100rpx;
}
.follow{
    position:relative;
    top:-60rpx;
    left:330rpx;
    background-color:#00B51D;
    border-radius: 10rpx;
    color:#fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    width:180rpx;
    height:60rpx;
}
.like-msg{
    display: flex;
    flex-direction: row;
    padding-top:20rpx;
}
.like-msg image{
    width:32rpx;
    height:32rpx;
}
.like-msg view{
    font-size:20rpx;
    color:#999;
    line-height: 32rpx;
    width:100rpx;
}
.bottom{
    background-color: #fff;
    color:#1afa29;
    box-shadow: 1rpx 1rpx 10rpx 4rpx #ddd;
    font-size:32rpx; 
    padding-top:20rpx; 
    padding-left:30rpx; 
    height:60rpx; 
    position:fixed;
    bottom:0rpx;
    width:100%;
}
.bottom image{
    margin-right:20rpx;
    width:32rpx; 
    height:32rpx;
}