@import '../../template/scroll-item.wxss';

swiper{
  width:100%;
  height:340rpx;
}
swiper Image{
  display:block;
  width:100%;
  height:100%;
}
/* 头部横向滑动导航 */
.header-row{
  color:#999;
  background-color:#fff;
  white-space: nowrap; 
  display:flex;
  border-bottom: 16rpx solid #f2f2f2;
}
