/* pages/pay/pay.wxss */
page{
  background:#f2f2f2;
}
.banner{
  display:block;
  width:100%;
  height:340rpx;
}
.block{
  background:#fff;
}
.block-title{
  position:relative;
  font-size:34rpx;
  line-height: 1.5;
  color:#2e5e86;
  padding:10rpx 20rpx;
  text-indent:20rpx;
}
.block-title::after{
  position:absolute;
  left:10rpx;
  top:14rpx;
  content:"";
  width:12rpx;
  height:40rpx;
  background:#2e5e86;
}
.block-desc{
  color:#666;
  line-height: 1.6;
  font-size:30rpx;
  padding:0 30rpx
}